<?xml version="1.0"?>
<odoo>
        <record id="danh_muc_view_form" model="ir.ui.view">
            <field name="name">danh.muc.form</field>
            <field name="model">danh.muc</field>
            <field name="arch" type="xml">
                <form String="Danh Muc">                  
                    <sheet>
					<group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="type"/>                        
                    </group>
                    </sheet>     
                </form>
            </field>
        </record>

        <record id="danh_muc_view_tree" model="ir.ui.view">
            <field name="name">danh.muc.tree</field>
            <field name="model">danh.muc</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree String="Danh Muc">        
                        <field name="code"/>
                        <field name="name"/>
                        <field name="type"/>   
                </tree>
            </field>
        </record>


        <record id="action_danh_muc" model="ir.actions.act_window">
            <field name="name">Danh Muc</field>
            <field name="res_model">danh.muc</field>
            <field name="view_mode">tree,form</field>     
          
        </record>
